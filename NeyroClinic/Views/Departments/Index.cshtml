@model List<Department>
<div class="row">
    <div class="coll-12">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Departments</h5>

                <a asp-action="Create" class="btn btn-secondary text-white" style="margin-right:20px;">Add</a>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                               
                                
                                <th>Department Name</th>
                                

                               
                                <th style="text-align:right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Department item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            
                                            <a asp-action="Update" asp-route-id="@item.Id" class="badge bg-primary text-white" style="margin-right:2px;height:min-content">Update</a>
                                           
                                        </div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



