@model OutPatient
<div class="card-body">
    <h5 class="card-title">Outpatient Details</h5>

    <!-- Multi Columns Form -->
    <form class="row g-3" method="post" enctype="multipart/form-data">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Adress"></label>
                <input asp-for="Adress" class="form-control">
                <span class="text-danger" asp-validation-for="Adress"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-4">
                <label class="form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control">
                <span class="text-danger" asp-validation-for="Age"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="BloodGroup"></label>
                <input asp-for="BloodGroup" class="form-control">
                <span class="text-danger" asp-validation-for="BloodGroup"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Treatment"></label>
                <input asp-for="Treatment" class="form-control">
                <span class="text-danger" asp-validation-for="Treatment"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Date"></label>
                <input asp-for="Date" class="form-control">
                <span class="text-danger" asp-validation-for="Date"></span>
            </div>
        </div>


        <div class="col-md-4">
            <div class="mb-3">
                <div class="form-group">
                    <label class="form-label">Select Doctor</label>
                    <select class="form-control" name="docId">
                        @foreach (Doctor doctor in ViewBag.Doctors)
                        {

                            <option value="@doctor.Id">@doctor.FullName</option>
                        }

                    </select>
                </div>
            </div>


        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label" asp-for="IsFemale">Gender</label>
                <select asp-for="IsFemale" class="form-control">
                    <option value="true">Female</option>
                    <option value="false">Male</option>
                </select>
                <span class="text-danger" asp-validation-for="IsFemale"></span>
            </div>
        </div>


        <div class="text-center">

            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary text-white">Go back</a>



        </div>
    </form><!-- End Multi Columns Form -->
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial">
    }
