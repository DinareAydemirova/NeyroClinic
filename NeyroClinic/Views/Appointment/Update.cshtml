@model Appointment
<div class="card-body">
    <h5 class="card-title">Edit Appointment</h5>

    <!-- Multi Columns Form -->
    <form class="row g-3" method="post" enctype="multipart/form-data">


        <div class="col-md-6">
            <div class="mb-3">
                <div class="form-group">
                    <label class="form-label">Select Doctor</label>
                    <select class="form-control" name="docId">
                        @foreach (Doctor doctor in ViewBag.Doctors)
                        {

                            <option value="@doctor.Id">@doctor.FullName</option>
                        }

                    </select>
                </div>
            </div>


        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" asp-for=" Patient"></label>
                <input asp-for="Patient" class="form-control">
                <span class="text-danger" asp-validation-for="Patient"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" asp-for="Date"></label>
                <input asp-for="Date" class="form-control">
                <span class="text-danger" asp-validation-for="Date"></span>
            </div>
        </div>




        <div class="text-center">

            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary text-white">Go back</a>



        </div>
    </form><!-- End Multi Columns Form -->
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial">
    }


