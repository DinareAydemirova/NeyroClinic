@model List<Inpatient>
<div class="row">
    <div class="coll-12">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Inpatients</h5>

                <a asp-action="Create" class="btn btn-secondary text-white" style="margin-right:20px;">Add</a>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Full Name</th>
                               
                               
                               
                                <th>Surgery Date</th>
                                <th>Discharged Date</th>
                              
                                <th>Surgery Type</th>
                               
                                <th>Doctor</th>
                                <th>Ward</th>
                                <th style="text-align:right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Inpatient item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.SurgeryDate
                                    </td>
                                    <td>
                                        @item.DischargedDate
                                    </td>
                                  
                                     <td>
                                        @item.SurgeryType
                                    </td>
                                  
                                   <td>
                                        @item.Doctor.FullName
                                    </td>
                                    <td>
                                       @item.Ward.RoomNumber
                                    </td>
                                    <td style="text-align:right">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="badge bg-warning text-white" style="margin-right:2px;height:min-content">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="badge bg-primary text-white" style="margin-right:2px;height:min-content">Update</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


